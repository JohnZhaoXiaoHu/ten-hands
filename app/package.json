{
  "name": "ten-hands-app",
  "description": "Project script runner",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://github.com/saisandeepvaddi/ten-hands",
  "author": {
    "name": "Sai Sandeep Vaddi",
    "email": "saisandeepvaddi@gmail.com",
    "url": "https://svaddi.dev"
  },
  "license": "MIT",
  "main": "./build/electron/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "start": "concurrently \"yarn build:watch\" && \"yarn electron-only\"",
    "dev": "./node_modules/.bin/nodemon",
    "pack": "./node_modules/.bin/electron-builder --dir",
    "build:installers": "rm -rf ./dist && ./node_modules/.bin/electron-builder",
    "electron-only": "./node_modules/.bin/electron ./build/electron/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/saisandeepvaddi/ten-hands"
  },
  "build": {
    "appId": "com.saisandeepvaddi.tenhands",
    "productName": "Ten Hands",
    "copyright": "Copyright Â© 2019 Sai Sandeep Vaddi",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "deb",
        "snap"
      ],
      "category": "Utility"
    },
    "publish": [
      "github"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "electron-is-dev": "^1.1.0",
    "express": "^4.16.4",
    "lowdb": "^1.0.0",
    "mkdirp": "^0.5.1",
    "socket.io": "^2.2.0",
    "tree-kill": "^1.2.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.12",
    "@types/lowdb": "^1.0.7",
    "@types/node": "^11.13.8",
    "@types/socket.io": "^2.1.2",
    "electron": "^5.0.1",
    "electron-builder": "^20.40.2",
    "electron-react-devtools": "^0.5.3",
    "nodemon": "^1.18.11",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  }
}
