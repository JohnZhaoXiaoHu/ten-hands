{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "types"]
  },
  "include": ["server/**/*", "electron/**/*", "shared/**/*"],
  "exclude": ["node_modules", "__tests__", "./server/__tests__"]
}
